{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "src/_types"], // Incluye el directorio donde est√° `types.d.ts`
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  }
}
